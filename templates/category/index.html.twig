{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    {% if app.user %}
    <div class="container">
    <h1>Catégories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-dark">+</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-success">Nouvelle catégorie</a>

        {% else %}
        <div>Accès refusé, vous n'êtes pas connecté</div>
    {% endif %}
    </div>
{% endblock %}
