{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    {% if app.user %}
<div class="container mt-5">
    <div class="jumbotron text-center mx-auto">
    <h1>Catégories index</h1>
        <div>
            <div class="count">
               Nombre total de catégories : {{ categories.getTotalItemCount }}
            </div>
        </div>
    <table class="table table-striped mt-5">
        <thead class="thead-dark">
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-dark">+</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="navigation">
            {{ knp_pagination_render(categories) }}
        </div>
    <a href="{{ path('category_new') }}" class="btn btn-success">Nouvelle catégorie</a>

        {% else %}
        <div class="container">
            <div class="jumbotron text-center mx-auto">
        <div>Accès refusé, vous n'êtes pas connecté</div>
            </div>
        </div>
    {% endif %}
    </div>
</div>
{% endblock %}
